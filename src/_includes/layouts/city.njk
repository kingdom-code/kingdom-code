---
nav: true;
layout: layouts/base.njk
---

{% set events = events | eventsInCity(cityName) %}

<header class="kc-header">
  {% rwdImg "/_assets/img/cities/" + cityName | slug + ".jpg", "" , "100vw", "kc-header__media" %}

  <div class="kc-header__container">

    <div class="kc-header__container__logoGroup">
      <img src="/_assets/misc/logos/kingdom-code.svg" alt="Kingdom Code" class="kc-header__logo"/>
      <hgroup>
        <h1>{{ basics.name }}</h1>
        <img src="/_assets/misc/logos/{{ cityName | slug }}.svg" alt="{{ cityName }}" class="kc-header__cityName-svg"/>
      </hgroup>
    </div>

    <div class="kc-header__ctas">
      <a class="js-moveto" href="#meetups">Meetups</a>
      <a class="js-moveto" href="#newsletter">Newsletter</a>
    </div>

  </div>

</header>

<main class="container kc-describer">
  {{ layoutContent | safe }}
</main>

<div class="container">
  {% include "blocks/events.njk" %}

  {% include "blocks/people.njk" %}
</div>
