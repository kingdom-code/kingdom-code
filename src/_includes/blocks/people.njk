<div class="kc-people">

  <section>
    <h3>City team</h3>

    <ul>
    {% for person in people | sort(false, false, 'name') %}

      {% if cityName in person.team %}
        <li>
          <div>
            {% if person.avatar %}
              <image src="{{person.avatar}}" style="width:50px;height:50px;">
            {% else %}
              <image src="{{default.avatar}}" style="width:50px;height:50px;">
            {% endif %}
            <a href="{{person.href}}" style="text-decoration:none;">
              {{person.name}}
            </a>
          </div>
          <div>
            {{person.bio}}
          </div>
        </li>
      {% endif %}

    {% endfor %}
    </ul>

    <p>Want to get invovled? <a href="https://www.twitter.com/kcodeuk/" target="_blank">Let us know</a>.</p>
  </section>

</div>
